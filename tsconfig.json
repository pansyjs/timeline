{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@pansy/react-timeline": ["src"],
      "@pansy/react-timeline/*": ["src/*"] // 支持子路径
    }
  },
  "include": ["docs", "theme", "rspress.config.ts", "src"],
  "mdx": {
    "checkMdx": true
  }
}
